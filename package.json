{
  "name": "react-native-ios-keyboard-events",
  "version": "0.0.2",
  "license": "MIT",
  "private": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "npm run ipad",
    "ipad": "react-native run-ios --simulator='iPad Air 2'",
    "iphone": "react-native run-ios --simulator='iPhone 8 Plus'",
    "test": "jest",
    "test:watch": "jest --watch",
    "tslint": "tslint -c tslint.json -p tsconfig.json 'src/**/*.{ts,tsx}'",
    "lint": "npm run tslint && tsc",
    "lint:fix": "prettier --write 'src/**/*.{ts,tsx}' && npm run tslint -- --fix && tsc",
    "dist": "rm -rf dist && npm run lint && npm run test && tsc -p tsconfig-dist.json"
  },
  "dependencies": {
    "deep-equal": "^1.0.1",
    "events": "^3.0.0",
    "queue": "^5.0.0",
    "react-native": "0.58.1"
  },
  "devDependencies": {
    "@types/deep-equal": "^1.0.1",
    "@types/events": "^3.0.0",
    "@types/jest": "^23.3.13",
    "@types/react": "^16.7.21",
    "@types/react-native": "^0.57.34",
    "@types/react-test-renderer": "^16.0.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "24.0.0",
    "husky": "^1.3.1",
    "jest": "24.0.0",
    "metro-react-native-babel-preset": "0.51.1",
    "prettier": "^1.16.1",
    "react": "^16.6.3",
    "react-test-renderer": "16.6.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react-native",
    "keyboard",
    "ios",
    "split",
    "events"
  ],
  "jest": {
    "preset": "react-native",
    "clearMocks": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/?(*.)+(spec|test).[tj]s?(x)"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  },
  "prettier": {
    "trailingComma": "all",
    "arrowParens": "always"
  }
}
