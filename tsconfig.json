{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": true,
    "jsx": "react-native",
    "lib": ["es2018"],
    "moduleResolution": "node",
    "strict": true,
    "target": "ES3",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"],
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": ["dist", "babel.config.js"]
}
